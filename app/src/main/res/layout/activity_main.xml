<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#e0f2f2">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#009688">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolBar" />

    </com.google.android.material.appbar.AppBarLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginEnd="-10dp"
        android:layout_marginTop="110dp"
        android:orientation="horizontal"
        android:id="@+id/l1">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:background="@drawable/background_img"
            android:rotation="-5"
            android:src="@drawable/gato" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:background="@drawable/background_img"
            android:rotation="5"
            android:src="@drawable/perro" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:background="@drawable/background_img"
            android:rotation="7"
            android:src="@drawable/paloma" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:layout_below="@+id/l1"
        android:layout_marginTop="20dp"
        android:id="@+id/l2">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginStart="25dp"
            android:background="@drawable/background_img"
            android:rotation="6"
            android:src="@drawable/cerezas" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:background="@drawable/background_img"
            android:rotation="-5"
            android:src="@drawable/platano" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:background="@drawable/background_img"
            android:rotation="-5"
            android:src="@drawable/trebol" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:id="@+id/l3"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/l2">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:background="@drawable/background_img"
            android:rotation="-5"
            android:src="@drawable/h1" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:background="@drawable/background_img"
            android:rotation="5"
            android:src="@drawable/rosa" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:background="@drawable/background_img"
            android:rotation="-3"
            android:src="@drawable/loro" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/l3">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:background="@drawable/background_img"
            android:rotation="6"
            android:src="@drawable/coche" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:background="@drawable/background_img"
            android:rotation="-5"
            android:src="@drawable/silla" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:background="@drawable/background_img"
            android:rotation="7"
            android:src="@drawable/galleta" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="60dp"
        android:layout_below="@id/l4">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/l4">

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/ll1"
            android:layout_marginTop="135dp"
            android:background="@drawable/border">

            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="NO TIME LIMIT"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:id="@+id/NoTimeLimittxt"
                android:gravity="center"
                android:textColor="#e0f2f2"
                android:background="#009788"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="NORMAL"
                android:id="@+id/Normaltxt"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:textColor="#e0f2f2"
                android:background="#009788"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="HARD"
                android:textSize="20sp"
                android:id="@+id/Hard"
                android:gravity="center"
                android:textColor="#e0f2f2"
                android:background="#009788"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="174dp"
            android:layout_height="77dp"
            android:layout_below="@+id/ll1"
            android:layout_marginTop="33dp"
            android:background="@drawable/border"
            android:gravity="center">

            <TextView
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:background="#009788"
                android:gravity="center"
                android:text="REMOVE ADS"
                android:textColor="#e0f2f2"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:id="@+id/ll3"
            android:layout_below="@+id/ll2"
            android:orientation="horizontal"
            android:background="@drawable/border">

            <TextView
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:text="share"
                android:id="@+id/sharemenu"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textColor="#e0f2f2"
                android:background="#009788"/>
            <TextView
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:text="MORE GAMES"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textColor="#e0f2f2"
                android:background="#009788"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/l1"
            android:layout_marginTop="55dp"
            android:background="#009788"

            ></LinearLayout>


    </LinearLayout>



</RelativeLayout>















